<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    tools:context=".DetayActivitiy">

    <TextView
        android:id="@+id/eventNameDetail"
        android:layout_width="356dp"
        android:layout_height="40dp"

        android:layout_marginTop="183dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="623dp"
        android:text="Event Name"
        android:textColor="#2B15D5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventDateDetail"
        android:layout_width="272dp"
        android:layout_height="30dp"

        android:layout_marginTop="282dp"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="534dp"
        android:background="@drawable/textview_border"
        android:text="Event Date"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/averageRatingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="444dp"
        android:layout_marginEnd="289dp"
        android:layout_marginBottom="265dp"
        android:text="Ortalama Puan: -"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventVenueDetail"
        android:layout_width="345dp"
        android:layout_height="42dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="492dp"
        android:background="@drawable/textview_border"
        android:text="Event Venue"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eventime"
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="499dp"
        android:background="@drawable/textview_border"
        android:text="Event time"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.315" />


    <TextView
        android:id="@+id/eventaddress"
        android:layout_width="383dp"
        android:layout_height="55dp"
        android:layout_marginTop="354dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="437dp"
        android:background="@drawable/textview_border"
        android:text="Event Address"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buybutton"
        android:layout_width="83dp"
        android:layout_height="57dp"

        android:layout_marginStart="300dp"
        android:layout_marginTop="403dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="271dp"
        android:backgroundTint="#2196F3"
        android:text="Satın Al"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.547"
        tools:text="Satın Al" />

    <Button
        android:id="@+id/addToCalendarButton"
        android:layout_width="101dp"
        android:layout_height="42dp"

        android:layout_marginStart="71dp"
        android:layout_marginTop="358dp"
        android:layout_marginEnd="239dp"
        android:layout_marginBottom="331dp"
        android:backgroundTint="#2196F3"
        android:text="Takvime Ekle"
        android:textSize="8dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.573"
        tools:text="Takvime Ekle" />

    <Button
        android:id="@+id/joinEventButton"
        android:layout_width="101dp"
        android:layout_height="42dp"

        android:layout_marginStart="294dp"
        android:layout_marginTop="358dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="331dp"
        android:backgroundTint="#2196F3"
        android:text="Etkinliğe Katıl"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.573"
        tools:text="Satın Al" />

    <Button
        android:id="@+id/favorilerbutonu"
        android:layout_width="83dp"
        android:layout_height="57dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="403dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="271dp"
        android:backgroundTint="#2196F3"
        android:text="Favorilere ekle"
        android:textSize="7sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.547"
        tools:text="Favorilere ekle" />

    <Button
        android:id="@+id/harita"
        android:layout_width="101dp"
        android:layout_height="42dp"
        android:layout_marginStart="182dp"
        android:layout_marginTop="358dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="331dp"
        android:backgroundTint="#2196F3"
        android:text="Yol tarifi"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.573"
        tools:text="Yol tarifi" />

    <ImageView
        android:id="@+id/eventDetailImage"
        android:layout_width="415dp"
        android:layout_height="167dp"
        android:layout_marginTop="16dp"

        android:layout_marginBottom="663dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="226dp"
        android:layout_height="74dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="295dp"
        android:layout_marginBottom="279dp"
        android:backgroundTint="#000000"
        android:numStars="5"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:stepSize="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="465dp"
        android:layout_marginBottom="221dp"
        android:backgroundTint="#0F0E0E"
        android:foregroundTint="#000000"
        android:hint="Yorumunuzu buraya yazın"
        android:inputType="textMultiLine"
        android:textColor="#000000"
        android:textColorLink="#181717"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="510dp"
        android:layout_marginBottom="173dp"
        android:text="Gönder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentList"
        android:layout_width="409dp"
        android:layout_height="162dp"
        android:layout_marginTop="569dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="#000000"
        android:foregroundTint="#000000"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>